generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id         String   @id @default(uuid())
  name       String   @unique
  price      Decimal  @db.Decimal(5, 2)
  created_at DateTime @default(now())
}

enum Role {
  ADMIN
  MEMBER
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  password   String
  avatar_url String
  role       Role     @default(MEMBER)
  created_at DateTime @default(now())
}
